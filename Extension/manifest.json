{
    "name" : "LaftelSync",
    "description": "Sync Laftel Anime & watch Anime with friends",
    "version" : "0.1",
    "manifest_version": 3,

    "action":{
        "default_title": "testing",
        "default_icon":"icon.png",
        "default_popup":"page/index.html"
    },
    "permissions":[
        "declarativeContent",
        "scripting",
        "activeTab",
        "tabs"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker" : "worker/background.js"
    }
}